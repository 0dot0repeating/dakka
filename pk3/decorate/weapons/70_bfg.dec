      Recoil3A:
        DBFG C 1 bright offset(-2, 42)
        goto FireEnd

      Recoil3B:
        DBFG C 1 bright offset(-1, 43)
        goto FireEnd

      Recoil3C:
        DBFG C 1 bright offset( 0, 41)
