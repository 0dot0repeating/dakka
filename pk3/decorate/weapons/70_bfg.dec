        DBFG B 1 bright offset(-1, 32) A_WeaponReady(WRF_NOPRIMARY | WRF_NOBOB)
        DBFG B 1 bright offset( 0, 32) A_WeaponReady(WRF_NOPRIMARY | WRF_NOBOB)
        DBFG B 1 bright offset( 2, 32) A_WeaponReady(WRF_NOPRIMARY | WRF_NOBOB)
        DBFG B 1 bright offset(-1, 32) A_WeaponReady(WRF_NOPRIMARY | WRF_NOBOB)
