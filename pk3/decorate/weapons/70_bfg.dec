      Recoil1A:
        DBFG C 1 bright offset(-2, 35)
        goto FireEnd

      Recoil1B:
        DBFG C 1 bright offset(-1, 34)
        goto FireEnd

      Recoil1C:
        DBFG C 1 bright offset( 0, 33)
        goto FireEnd

      Recoil1D:
        DBFG C 1 bright offset( 1, 34)
        goto FireEnd

      Recoil1E:
        DBFG C 1 bright offset( 2, 35)
        goto FireEnd

      Recoil1F:
        DBFG C 1 bright offset(-3, 33)
        goto FireEnd

      Recoil1G:
        DBFG C 1 bright offset( 3, 35)
        goto FireEnd


