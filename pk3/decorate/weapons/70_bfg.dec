      Recoil3D:
        DBFG C 1 bright offset( 1, 43)
        goto FireEnd

      Recoil3E:
        DBFG C 1 bright offset( 2, 42)
        goto FireEnd

      Recoil3F:
        DBFG C 1 bright offset(-3, 44)
