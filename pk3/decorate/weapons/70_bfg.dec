        DBFG C 1 offset(0, 28) A_WeaponReady(WRF_NOFIRE | WRF_NOBOB)
        DBFG C 1 offset(0, 31) A_WeaponReady(WRF_NOFIRE | WRF_NOBOB)
        DBFG C 2 offset(0, 34) A_WeaponReady(WRF_NOFIRE | WRF_NOBOB)
