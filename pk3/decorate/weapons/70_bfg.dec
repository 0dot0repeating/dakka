        DBFG A 0 bright                A_Refire("Fire_From2")
        DBFG A 1 bright offset(-2, 33) A_WeaponReady(WRF_NOPRIMARY | WRF_NOBOB)
        DBFG A 0 bright                A_Refire("Fire_From2")
        DBFG A 1 bright offset( 1, 32) A_WeaponReady(WRF_NOPRIMARY | WRF_NOBOB)
        DBFG A 0 bright                A_Refire("Fire_From2")
        DBFG A 1 bright offset(-2, 33) A_WeaponReady(WRF_NOPRIMARY | WRF_NOBOB)
        DBFG A 0 bright                A_Refire("Fire_From2")
        DBFG A 1 bright offset( 1, 32) A_WeaponReady(WRF_NOPRIMARY | WRF_NOBOB)
        DBFG A 0 bright                A_Refire("Fire_From2")
        DBFG A 1 bright offset(-1, 32) A_WeaponReady(WRF_NOPRIMARY | WRF_NOBOB)
