        DBFG B 1 bright offset(-1, 32) A_WeaponReady(WRF_NOPRIMARY | WRF_NOBOB)
        DBFG B 1 bright offset( 0, 34) A_WeaponReady(WRF_NOPRIMARY | WRF_NOBOB)
        DBFG B 0 bright A_Refire("Charge_Stage6")
