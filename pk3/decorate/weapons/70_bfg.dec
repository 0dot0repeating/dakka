// AAPTR_TARGET is the player this belongs to
// AAPTR_MASTER is the thing this is currently targeting
// AAPTR_TRACER is a potential new target
actor BFGPointerDummy
{
    +NOINTERACTION
    Radius 0
    Height 0

    RenderStyle None
    var int user_timeout;

    States
    {
      Spawn:
        PLSS A -1
        stop

      KeepAlive:
        PLSS A 4
        stop
    }
}


