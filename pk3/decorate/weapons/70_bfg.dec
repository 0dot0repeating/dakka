        DBFG A 1 bright offset( 0, 32) A_WeaponReady(WRF_NOPRIMARY | WRF_NOBOB)
        DBFG A 0 bright                A_Refire("Fire")
        DBFG A 1 bright                A_WeaponReady(WRF_NOPRIMARY | WRF_NOBOB)
        DBFG A 0 bright                A_Refire("Fire")
        DBFG A 1 bright                A_WeaponReady(WRF_NOPRIMARY | WRF_NOBOB)
        DBFG A 0 bright                A_Refire("Fire")
        DBFG A 1 bright                A_WeaponReady(WRF_NOPRIMARY | WRF_NOBOB)
        DBFG A 0 bright                A_Refire("Fire")
        DBFG A 1 bright                A_WeaponReady(WRF_NOPRIMARY | WRF_NOBOB)
