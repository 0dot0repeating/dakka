actor Pickup_Shotgun: ClassBasedPickup replaces Shotgun
{
    States
    {
      Spawn:
        SHOT A 0
        "----" A 0 A_SetUserVar("user_index", It_Shotgun)
        "----" A 0 A_SetUserVar("user_dropped", 0)
        goto DropCheck

      Unknown:
      Dakka:
        DKSG Z -1
        stop

      SuperShotgun:
        DSSG Z -1
        stop

      Pickup:
        TNT1 A 0 A_JumpIf(CallACS("Pickup_Pickup", It_Shotgun, false) == 1, "PickedUp")
        goto NotPickedUp
    }
}

