actor Pickup_Chainsaw: ClassBasedPickup replaces Chainsaw
{
    States
    {
      Spawn:
        CSAW A 0
        "----" A 0 A_SetUserVar("user_index", It_Chainsaw)
        "----" A 0 A_SetUserVar("user_dropped", 0)
        goto DropCheck

      Unknown:
        CSAW A -1
        stop

      Dakka:
        SCPR Z -1
        stop

      Pickup:
        TNT1 A 0 A_JumpIf(CallACS("Pickup_Pickup", It_Chainsaw, false) == 1, "PickedUp")
        goto NotPickedUp
    }
}

