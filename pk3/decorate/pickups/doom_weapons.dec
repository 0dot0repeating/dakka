actor Pickup_PlasmaRifle: ClassBasedPickup replaces PlasmaRifle
{
    States
    {
      Spawn:
        PLAS A 0
        "----" A 0 A_SetUserVar("user_index", It_PlasmaRifle)
        "----" A 0 A_SetUserVar("user_dropped", 0)
        goto DropCheck

      Unknown:
        PLAS A -1
        stop

      Dakka:
        DPLS Z -1
        stop

      // Dakka-specific addition: if the player already has a plasma rifle, show
      //  him the channeler instead.
      Channeler:
        PLZM E -1
        stop

      // Dakka-specific addition: if dakka_bundleplasma's on, give both plasma rifle
      //  and channeler.
      Bundled:
        PLBD A -1
        stop

      Pickup:
        TNT1 A 0 A_JumpIf(CallACS("Pickup_Pickup", It_PlasmaRifle, false) == 1, "PickedUp")
        goto NotPickedUp
    }
}

